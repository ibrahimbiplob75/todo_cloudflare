generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  creator     String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Task {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId

  serial           Int       @default(1)
  title            String
  description      String?

  projectId        String?   @db.ObjectId
  projectMeetingId String?   @db.ObjectId
  parentTaskId     String?   @db.ObjectId
  assignedTo       String?   @db.ObjectId

  priority         String    @default("mid")
  taskStatus       String    @default("pending")
  progressPercent  Int       @default(0)

  submissionDate   DateTime?
  executionDate    DateTime?
  completionDate   DateTime?
  targetDate       DateTime?

  totalDuration    Int       @default(0)
  comment          String?
  status           Int       @default(1)

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // âœ… Correct single-line relation
  parentTask Task? @relation("TaskSubtasks", fields: [parentTaskId], references: [id], onDelete: NoAction)
  subtasks   Task[] @relation("TaskSubtasks")

  @@map("tasks")

  @@index([projectId])
  @@index([projectMeetingId])
  @@index([assignedTo])
  @@index([taskStatus])
  @@index([priority])
  @@index([submissionDate])
  @@index([parentTaskId])
}




model Todo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meeting {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String   @db.ObjectId
  title       String
  date        DateTime
  description String?
  creator     String   @db.ObjectId
  slug        String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("project_meetings")
  @@index([projectId])
  @@index([creator])
  @@index([date])
  @@index([slug])
}